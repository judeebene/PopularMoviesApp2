<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"


        >

        <TextView
            android:id="@+id/movie_title_view"
            android:layout_width="match_parent"
        android:layout_height="wrap_content"

            android:background="@color/lighter_orange"
            android:elevation="2dp"


            android:gravity="center"
            android:padding="5dp"
            android:text="Title"
            android:textColor="@color/color_primary"
            android:textSize="50sp"


            android:textStyle="bold" />


        <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

            <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/detailPoster_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="15dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/no_poster" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/light_orange">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"

                            android:elevation="2dp"
                            android:fontFamily="san"
                            android:gravity="left"
                            android:padding="5dp"


                            android:text="@string/movie_detail_release"
                            android:textAllCaps="true"
                            android:textColor="@color/color_primary"

                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/movie_release_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_weight="2"
                            android:elevation="2dp"
                            android:fontFamily="san"
                            android:gravity="right"
                            android:padding="5dp"
                            android:text="Relese"
                            android:textColor="@color/color_primary"

                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/lighter_orange">


                        <RatingBar
                            android:id="@+id/movieRatingBar"
                            android:layout_width="wrap_content"
                            android:layout_height="57dp"
                            android:isIndicator="true"
                            android:numStars="4"
                            android:rating="1.6" />

                        <TextView
                            android:id="@+id/movieRatingValue"
                            android:layout_width="0dp"
                            android:layout_height="57dp"
                            android:layout_weight="1"
                            android:elevation="2dp"
                            android:gravity="end"
                            android:padding="5dp"
                            android:text="@string/movie_detail_rating_value"
                            android:textAppearance="?android:textAppearanceMedium"
                            android:textColor="@color/color_primary"
                            android:textSize="22sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/app_bg">

                        <android.support.design.widget.FloatingActionButton xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/play_trailer"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight="2"
                            android:background="@color/primaryDark"
                            android:src="@drawable/ic_youtube"
                            app:borderWidth="0dp"
                            app:fabSize="normal" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="end"
                            android:text="@string/trailer"
                            android:textColor="@color/primaryDark"
                            android:textSize="28sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <Button
                            android:id="@+id/favorite_btn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"

                            android:background="@color/yellow"
                            android:text="Mark as Favorite"
                            android:textColor="@color/white" />

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/lighter_orange"
            android:orientation="vertical">


            <TextView
                android:id="@+id/movie_overview_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:elevation="2dp"
            android:padding="5dp"


                android:text="@string/movie_detail_no_description"
                android:textColor="@color/primaryDark"
            android:textSize="16sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/app_bg"
            android:orientation="vertical">

                <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                    android:background="@color/app_bg"
                    android:elevation="2dp"
                    android:text="Reviews"
                    android:textColor="@color/primaryDark"

                    android:textSize="18sp" />


                <TextView
                android:id="@+id/movie_reviews_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                    android:background="@color/app_bg"
                    android:elevation="2dp"
                    android:text="Reviews"
                    android:textColor="@color/primaryDark"

                    android:textSize="18sp" />


        </LinearLayout>


    </LinearLayout>




</LinearLayout>
</ScrollView>